<!DOCTYPE html>
<html>
    <head>
      <title>Snowforest</title>
          <%= stylesheet_link_tag    'application', media: "all", "data-turbolinks-track" => true %>
          <%= javascript_include_tag 'application' %>
          <%= csrf_meta_tags %>
    </head>
    <body>


 <!-- start: Header -->
	<div class="navbar">
		<div class="navbar-inner">
			<div class="container-fluid">
                <div class="row-fluid">
                     <%= link_to content_tag(:span, 'SnowForest'), products_url, :class => 'brand span2' %>
                        <div class="nav pull-right">
                           <% if current_user %>
                                 Welcome, <strong><%= current_user.email %>!</strong> <br/>
                                  <%= link_to 'Log out', session_path('current'), :method => :delete %>
                              <% else %>
                                  <%= link_to 'Log in', new_session_path %>
                                    or
                                  <%= link_to 'Sign up', new_user_path %>
                           <% end %>
                        </div>
                </div>
			</div>
		</div>
	</div>
<!--END: Header -->

    <div class="container-fluid">
        <div class="row-fluid">

         <!--Notices -->
          <% if flash[:notice] %>
                                  <div class="alert alert-success"><%= flash[:notice] %></div>
                              <% end %>
          <% if flash[:alert] %>
                                 <div class="alert alert-error"><%= flash[:alert] %></div>
                              <% end %>
         <!--YIELD-->

          <%= yield %>

        </div>
    </div>

    </body>
</html>
